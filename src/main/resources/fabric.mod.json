{
  "schemaVersion": 1,
  "id": "mchackpack",
  "version": "${version}",

  "name": "MC hack pack",
  "description": "a minecraft client mod which provides hacks for your minecraft character",
  "authors": [
    "QuantumGoddess"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/QuantumGoddess/mc-hack-pack"
  },

  "license": "GPL-3.0",
  "icon": "assets/mchackpack/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.quantumgoddess.mchackpack.MCHacks"
    ],
    "client": [
      "net.quantumgoddess.mchackpack.MCHacksClient"
    ]
  },
  "mixins": [
    "mchackpack.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17",
    "fabric-key-binding-api-v1": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}
